@model IEnumerable<EmployeesManagementSystem.Models.Employee>

@{
    ViewBag.Title = "Details of all employees in a team";
}

<h2>Details of all employees in team @ViewBag.TeamName </h2>

<p>
    @Html.ActionLink("Add Employee", "AddEmployeeToTeam")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>

        <th>
            Job Position
        </th>
        <th>
            Workplace
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosition.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Workplace.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "DetailsOfEmployee", new {id = item.EmployeeID}) |
                @Html.ActionLink("Delete", "DeleteEmployeeFromTeam", new {id = item.EmployeeID})
            </td>
        </tr>
    }
</table>
<div>
    <p><b>Information about Project Manager, Delivery Director and CEO:</b></p>
    <p>Project Manager - @ViewBag.PM</p>
    <p>Delivery Director - @ViewBag.DD</p>
    <p>CEO - @ViewBag.CEO</p>
</div>
